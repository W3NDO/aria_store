<div class="container w-full justify-around">
  <div class="mx-auto max-w-96">
    <div class="flex w-full justify-around">
      <h2 class="font-bold text-3xl">Log in</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field w-full flex flex-col justify-between my-2 items-center">
        <%= f.label :email, class: "" %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "myaria@email.com", autocomplete: "email", class: "p-2 border border-gray-700 rounded-sm" %>
      </div>

      <div class="field flex flex-col justify-between items-center my-2">
        <%= f.label :password, class: "" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "p-2 border border-gray-700 rounded-sm" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex w-full justify-around items-center">
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end %>

      <div class="actions flex justify-around my-2">
        <%= f.submit "Log in", class: "border rounded-sm bg-blue-300 p-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>