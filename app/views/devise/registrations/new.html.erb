<div class="container w-full justify-around">
  <div class="mx-auto max-w-96">
    <div class="flex w-full justify-around">
      <h2 class="font-bold text-3xl">Sign Up</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field flex flex-col justify-between my-2 items-center">
        <%= f.label :username %><br />
        <%= f.text_field :username, placeholder: "username", required: true, autofocus: true, autocomplete: "username", class: "p-2 border border-gray-700 rounded-sm" %>
      </div>

      <div class="field flex flex-col justify-between my-2 items-center">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "myaria@mail.com", autocomplete: "email", class: "p-2 border border-gray-700 rounded-sm" %>
      </div>

      <div class="field flex flex-col justify-between my-2 items-center">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "p-2 border border-gray-700 rounded-sm" %>
      </div>

      <div class="field flex flex-col justify-between my-2 items-center">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "p-2 border border-gray-700 rounded-sm" %>
      </div>

      <div class="actions flex justify-around my-2">
        <%= f.submit "Sign up", class: "border rounded-sm bg-blue-300 p-2"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>